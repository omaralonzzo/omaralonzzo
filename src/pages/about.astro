      </div>

      <!-- Event Card 2 -->
      <div class="bg-white dark:bg-neutral-800 rounded-xl shadow-lg overflow-hidden">
        <div class="p-6">
          <span class="inline-block bg-orange-100 text-orange-800 rounded-full px-3 py-1 text-sm font-semibold mb-4">
            WORKSHOP
          </span>
